package Aste1;

public class Pelikula {
	
	private String izena;
	
	private int iraupena;
	
	private String zuzendaria;
	
	private char generoa;
	
	private int irabaziak;
	
	private int zenbatAktore;
	
	public Pelikula(String izena, int iraupena, String zuzendaria, char generoa, int irabaziak, int zenbatAktore) {
		this.izena=izena;
		this.iraupena=iraupena;
		this.zuzendaria=zuzendaria;
		this.generoa=generoa;
		this.irabaziak=irabaziak;
		this.zenbatAktore=zenbatAktore;
	}

	
	
	
	@Override
	public String toString() {
		
		return "Pelikula [izena=" + izena + ", iraupena=" + iraupena/60 + " ordu " + iraupena%60+ " minutu" + ", zuzendaria=" + zuzendaria + ", generoa="
				+ generoa + ", irabaziak=" + irabaziak + ", zenbatAktore=" + zenbatAktore + "]";
	}




	public boolean luzeaDa() {
		if(iraupena>120) {
			return true;
		}
		return false;
	}
	
	public String getIzena() {
		return izena;
	}




	public void setIzena(String izena) {
		this.izena = izena;
	}

	public static void main(String[] args) {
		Pelikula p1=new Pelikula("El libro de la jungla",87,"Maxwell", 'H', 4, 2);
		Pelikula p2=new Pelikula("Jumanji", 102,  "Rose", 'M', 5, 18 );
		Pelikula p3=new Pelikula("101 dalmatas", 130, "Juan", 'H', 3, 2);
	
		
		p1.toString();
		p1.luzeaDa();
		
		System.out.println("----------------");
		
		p2.toString();
		p2.luzeaDa();
		
		System.out.println("----------------");

		p3.toString();
		p3.luzeaDa();
		
		
		
	}
	
	

}
